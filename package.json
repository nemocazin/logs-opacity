{
    "name": "unobtrusive-logs",
    "displayName": "Unobtrusive Logs",
    "description": "Reduces the visual impact of logs during development.",
    "publisher": "NemoCazin",
    "version": "1.1.1",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/nemocazin/unobtrusive-logs"
    },
    "engines": {
        "vscode": "^1.108.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "unobtrusive-logs.toggle",
                "title": "Unobtrusive Logs: Toggle On/Off extension"
            },
            {
                "command": "unobtrusive-logs.changeOpacity",
                "title": "Unobtrusive Logs: Change Opacity"
            },
            {
                "command": "unobtrusive-logs.changeColor",
                "title": "Unobtrusive Logs: Change Color"
            },
            {
                "command": "unobtrusive-logs.addCustomRegex",
                "title": "Unobtrusive Logs: Add Custom Regex"
            },
            {
                "command": "unobtrusive-logs.deleteCustomRegex",
                "title": "Unobtrusive Logs: Delete Custom Regex"
            }
        ],
        "configuration": {
            "title": "Unobtrusive Logs",
            "properties": {
                "unobtrusive-logs.toggle": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle visibility of logs."
                },
                "unobtrusive-logs.opacity": {
                    "type": "number",
                    "default": 50,
                    "minimum": 0,
                    "maximum": 100,
                    "description": "Opacity level for logs (0 to 100)."
                },
                "unobtrusive-logs.color": {
                    "type": "string",
                    "default": "#808080",
                    "description": "Color used for logs.",
                    "format": "color"
                },
                "unobtrusive-logs.custom-regexes": {
                    "type": "array",
                    "default": [],
                    "description": "Custom regexes.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "language": {
                                "type": "string",
                                "description": "Language for the regex."
                            },
                            "name": {
                                "type": "string",
                                "description": "Name of the custom regex."
                            },
                            "pattern": {
                                "type": "string",
                                "description": "Regex pattern."
                            }
                        },
                        "required": [
                            "language",
                            "name",
                            "pattern"
                        ]
                    }
                }
            }
        }
    },
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf ./dist ./coverage *.vsix",
        "test": "vitest run",
        "lint": "npx eslint src",
        "coverage": "vitest run --coverage",
        "vscode:prepublish": "npm run compile",
        "vscode:package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.19.7",
        "@types/vscode": "^1.108.1",
        "@vitest/coverage-v8": "^4.0.18",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "globals": "^17.1.0",
        "jiti": "^2.6.1",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.18"
    }
}
